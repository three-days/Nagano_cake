<h1>商品説明</h1>
<div class="col-md-8">
           <table class="table">
　　　　　　　　　<!--カート送信ボタンのコード -->
            <% @products.each do |product| %>
            <tr>
            	<td>
                 <div><%= attachment_image_tag product, :image, format:'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size: '50x50' %></div>
              </td>
                  <td><%= product.product_name %></td>
                  <td><%= product.tax_excluded %></td>
                <%= form_for( Cart.new(product_id: product.id)) do|f|  %>
                   <td><%= f.select :product_number, [*1..100] ,class:"form-control" %></td>
                   <%= f.hidden_field :product_id %>
                   <td><%= f.submit "カートに入れる", class: "btn btn-primary" %></td>
                <% end %>
            <% end %>
           </table>
        </div>